#
# This is the GTK+ 2 version of Adwaita. It's whole purpose is to look as the
# GTK+ 3 version as much as possible until GTK+ 2 dies completely.
#
# Note: comments for explaining styles are on the bottom of each file beside the
# widget matches.

# Declare the colours used throughout the theme.
# There shouldn't be any fiddling with them in the theme files themselves in
# order to not mess up the dark theme.

# Text/base
gtk-color-scheme = "text_color:#c8c8c8\nbase_color:#292f3c"
# Foreground/background
gtk-color-scheme = "fg_color:#c8c8c8\nbg_color:#303746"
#Â Selected foreground/background
gtk-color-scheme = "selected_fg_color:#d4d4d4\nselected_bg_color:#0394e8"
# Insensitive foreground/background
gtk-color-scheme = "insensitive_fg_color:#707272\ninsensitive_bg_color:#323536"
# Menus
gtk-color-scheme = "menu_color:#292f3c"
# Links
gtk-color-scheme = "link_color:#4e8cc9\nvisited_link_color:#3877b7"
# Treeview headers
gtk-color-scheme = "column_header_color:#979a9b\nhover_column_header_color:#636769"
# Window decoration
gtk-color-scheme = "window_color:#292f3c"
# Tooltips
gtk-color-scheme = "tooltip_fg_color:#c8c8c8\ntooltip_bg_color:#242a36"

# Set GTK settings
gtk-auto-mnemonics              = 1
gtk-primary-button-warps-slider = 1

# And hand over the control to the theme files
include "main.rc"
include "apps.rc"
include "hacks.rc"
include "xfce.rc"
